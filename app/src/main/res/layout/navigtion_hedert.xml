<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_gravity="right"
    android:layout_height="match_parent">


    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:id="@+id/navigition">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:background="@color/red"
                android:src="@drawable/logodg"
                android:layout_height="150dp" />
            <LinearLayout
                android:id="@+id/login_li"
                android:background="#ef413d"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="ورود ثبت نام"
                    android:id="@+id/login_txt"

                    android:textColor="#fff" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:src="@drawable/loggg"
                    android:layout_margin="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="خرید"

                    android:id="@+id/txtbasket"
                    android:textColor="@color/red" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#7b7777"/>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="خانه"
                    android:textSize="20dp"
                    android:layout_marginRight="13dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="-7dp"

                    android:layout_width="wrap_content"
                    android:src="@drawable/hoss"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="-15dp"

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="لیست دسته بندی محصولات"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="-7dp"

                    android:layout_width="wrap_content"
                    android:src="@drawable/list"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="-15dp"

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_width="wrap_content"
                    android:text="سبد کالا"
                    android:textSize="20dp"
                    android:layout_marginRight="-5dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="-7dp"

                    android:layout_width="wrap_content"
                    android:src="@drawable/sa_d"
                    android:layout_marginRight="8dp"
                    android:padding="8dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <ImageView
                android:layout_marginTop="-15dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#7b7777"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="پیشنهاد ویزه دیجی کالا"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                     android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="پرفروش ترین ها"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="جدیدترین ها"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="پربازدید ترین ها"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#7b7777"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="تنظیمات"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="سوالات متداول"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="درباره ما"
                    android:textSize="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </android.support.design.widget.NavigationView>
</LinearLayout>