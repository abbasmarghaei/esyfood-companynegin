<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_bak"
    tools:context="hp.dddd.log_in">
    <!--  ax  arm-->
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_width="wrap_content"
            android:src="@drawable/logkoo"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!--  edit tex-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <EditText

                android:gravity="center"
                android:id="@+id/tels"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:textColor="#190000"
                android:textSize="15dp"
                android:hint="شماره تماس"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <EditText

                android:gravity="center"
                android:id="@+id/name_kars"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:textColor="#190000"
                android:textSize="15dp"
                android:hint="اسمت کسب و کار"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <EditText

                android:gravity="center"
                android:id="@+id/names"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:textColor="#190000"
                android:textSize="15dp"
                android:hint="نام و نام خانوادگی"/>

        </LinearLayout>


    </LinearLayout>

    <!--فراموشی پس -->
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="210dp">
        <LinearLayout
            android:layout_marginTop="-80dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="70dp"
                android:background="#e14715"
                android:textColor="#feffff"
                android:textSize="11dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/btn_sabts"

                android:text="ثبت رستوران"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="0dp"

                android:layout_width="350dp"
                android:src="@drawable/farra"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
